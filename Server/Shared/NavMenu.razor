<Bar Breakpoint="Breakpoint.Desktop"
    Background="Background.Light"
    ThemeContrast="ThemeContrast.Light">
    <BarToggler />
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To=""><BarIcon IconName="IconName.Home" />Home</BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/Counter"><BarIcon IconName="IconName.PlusCircle" />Counter</BarLink>
            </BarItem>
        </BarStart>
        <BarEnd>
            <AuthorizeView>
                <Authorized>
                    <BarItem>
                        <BarLink To="/Account/Logout">
                            <BarIcon IconName="@("fa-arrow-right-from-bracket")" />Logout
                        </BarLink>
                    </BarItem>
                </Authorized>
                <NotAuthorized>
                    <BarItem>
                        <BarLink To="/Account/Register">
                            <BarIcon IconName="IconName.User" />Register
                        </BarLink>
                    </BarItem>
                    <BarItem>
                        <BarLink To="/Account/Login">
                            <BarIcon IconName="@("fa-arrow-right-to-bracket")" />Login
                        </BarLink>
                    </BarItem>
                </NotAuthorized>
            </AuthorizeView>
        </BarEnd>
    </BarMenu>
</Bar>
