<AuthorizeView>
    <Authorized>
        <BarItem><BarLink To="authentication/profile">Hello, @context.User.Identity?.Name!</BarLink></BarItem>
        <BarItem><BarLink Clicked=BeginSignOut>Log out</BarLink></BarItem>
    </Authorized>
    <NotAuthorized>
        <BarItem><BarLink To="authentication/register">Register</BarLink></BarItem>
        <BarItem><BarLink To="authentication/login">Log in</BarLink></BarItem>
    </NotAuthorized>
</AuthorizeView>
